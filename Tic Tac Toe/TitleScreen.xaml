<Window x:Class="Tic_Tac_Toe.TitleScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tic Tac Toe"
        Height="500"
        Width="800"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="False">
    <Window.Background>
        <ImageBrush ImageSource="Image\welcome.jpg"/>
    </Window.Background>
    <Window.Resources>
        <Style x:Key="Button" 
               TargetType="Button">
            <Setter
                Property="Background"
                Value="Orange"/>
            <Setter 
                Property="Foreground"
                Value="White"/>
            <Setter
                Property="Template">
                <Setter.Value>
                    <ControlTemplate
                        TargetType="Button"
                        >
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="25">
                            <ContentPresenter
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect
                                    Color="SaddleBrown" 
                                    BlurRadius="15" 
                                    ShadowDepth="0"/>
                            </Border.Effect>
                        </Border>
   
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel 
                Grid.Row="1" 
                VerticalAlignment="Center">
                <TextBlock
                         Text="BY Group 10" 
                         HorizontalAlignment="Center"
                         FontSize="40"
                         FontFamily="Comic Sans MS Bold"
                         Foreground="White"
                         Margin="0,0,0,10">
                    <TextBlock.Effect>
                        <DropShadowEffect 
                                        Color="Black" 
                                        BlurRadius="20" 
                                        ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock 
                         Text="☠️Tic Tac Toe💀"
                         HorizontalAlignment="Center"
                         FontSize="72"
                         FontFamily="Comic Sans MS Bold"
                         FontWeight="Bold"
                         Foreground="Gold">
                    <TextBlock.Effect>
                        <DropShadowEffect
                                        Color="BurlyWood" 
                                        BlurRadius="20" 
                                        ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
           

            <!-- Mode Selection Buttons -->
            <StackPanel Grid.Row="2"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,40">
               

                <Button Content="Person vs Person💀"
                        Style="{StaticResource Button}"
                        Width="300"
                        Height="60"
                        FontSize="24"
                        FontFamily="Comic Sans MS Bold"
                        Margin="0,0,0,20"
                        Click="PersonVsPerson_Click"/>

                <Button Content="Person vs AI☠️"
                        Style="{StaticResource  Button}"
                        Width="300"
                        Height="60"
                        FontSize="24"
                        FontFamily="Comic Sans MS Bold"
                        Click="PersonVsAI_Click"/>

            </StackPanel>
            <Grid Grid.Row="2">
                <Button Content="⬅️Back"
                  Width="100"
                   Height="50"
                     FontSize="15"
                    FontFamily="Comic Sans MS Bold"
                     Background="Orange"
                    Name="Back"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                        Click="Back_Click"
                      Margin="10,0"/>
            </Grid>
        </Grid>
    </Border>
</Window>